<h2>Sign In</h2>

<br>

<div class="row">
  <%= form_tag "/authenticate", "class" => "col-md-5" do  %>

    <div class="form-group">
      <%= label_tag "username" %>
      <%= text_field_tag "username", "", "class" => "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag "password" %>
      <%= password_field_tag "password", "", "class" => "form-control" %>
    </div>

    <br>

    <%= submit_tag "OK", "class" => "btn btn-lg btn-primary" %>&nbsp;&nbsp;
    <%= link_to "Cancel", "/", "class" => 'btn btn-lg btn-danger' %>

  <% end %>
</div>
