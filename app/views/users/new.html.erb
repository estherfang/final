<h2>Create an account</h2>

<br>

<div class="row">
  <div class="col-md-5">

    <p><%= @message %></p>

    <%= form_tag "/users", "method" => "post" %>

      <div class="form-group">
        <%= label_tag "username", "Username" %>
        <%= text_field_tag "username", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "password", "Password" %>
        <%= password_field_tag "password", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "name", "Name" %>
        <%= text_field_tag "name", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "phone", "Phone (10 digits, no spaces or punctuation)" %>
        <%= text_field_tag "phone", "", "class" => "form-control" %>
      </div>

      <br>

      <%= submit_tag "Create my account", "class" => "btn btn-lg btn-primary" %>&nbsp;&nbsp;
      <%= link_to "Cancel", "/", "class" => 'btn btn-lg btn-danger' %>


    </form>
</div>
</div>
